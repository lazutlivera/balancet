{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["esnext"],
      "jsx": "react-native",
      "module": "esnext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "~/*": ["./app/*"]
      },
      "types": [
        "jest",
        "react-native",
        // "nativewind/types"
      ]
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
  }